{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18 || 20 || 22"
  },
  "scripts": {
    "dev": "yarn workspaces foreach -A --include @rothenbergt/backstage-plugin-roadmap --include @rothenbergt/backstage-plugin-roadmap-backend --parallel -v -i run start",
    "start": "yarn workspace @rothenbergt/backstage-plugin-roadmap start",
    "start-backend": "yarn workspace @rothenbergt/backstage-plugin-roadmap-backend start",
    "build:all": "backstage-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint --since origin/master",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "new": "backstage-cli new --scope internal"
  },
  "workspaces": {
    "packages": [
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.34.3",
    "@backstage/e2e-test-utils": "^0.1.1",
    "@spotify/prettier-config": "^12.0.0",
    "@types/react-dom": "^18",
    "node-gyp": "^10.0.0",
    "prettier": "^2.3.2",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "typescript": "~5.4.0"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.10.3"
}
